# Set ENV variables
export PATH=$HOME/bin:$HOME/.composer/vendor/bin:/usr/local/bin:/usr/local/sbin:$PATH

# Default username
export DEFAULT_USER=juan

#export ANDROID_HOME=/usr/local/opt/android-sdk

export JAVA_HOME=`/usr/libexec/java_home`

# Prefer US English and use UTF-8
export LC_ALL="en_US.UTF-8"
export LANG="en_US"

export HISTCONTROL=ignoredups:erasedups # no duplicate entries
export HISTSIZE=100000 # big big history (default is 500)
export HISTFILESIZE=$HISTSIZE # big big history
export HISTTIMEFORMAT="%F %T " # Display timestamp along with the command

# Ignore specific commands from the history
export HISTIGNORE="pwd:ls:ls *:exit:date:man *:history"

# Make Vim the default editor
export EDITOR="vim"

# Donâ€™t clear the screen after quitting a manual page
export MANPAGER="less -X"

# grep: Always enable colored output, show line number
export GREP_OPTIONS="--color=always"

export XDEBUG_CONFIG="idekey=PHPSTORM"
