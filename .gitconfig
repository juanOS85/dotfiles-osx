[user]
  name = Juan Obando
  email = juanchopx2@gmail.com
[alias]
  # add
  aa = add .
  au = add -u

  # checkout
  co = checkout
  cb = checkout -b
  cf = checkout --

  # diff
  di = diff
  kdi = difftool -y -t Kaleidoscope

  # commit
  ci = commit -m

  # status
  st = status -s

  # pull
  up = pull

  # log
  l = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  lf = log -u

  # merge
  kmg = mergetool -y -t Kaleidoscope

  # reset
  unstg = reset HEAD
  unci = reset --soft HEAD^

[core]
  # global gitignore file
  excludesfile = ~/.gitignore
  editor = subl

[color]
  ui = always

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = green
  changed = yellow
  untracked = red

[merge]
  log = true

[push]
  # push/pull changes to the current branch
  default = current

# Set Kaleidoscope app as a optional diff tool
[difftool "Kaleidoscope"]
  cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"

# Set Kaleidoscope app as a optional merge tool
[mergetool "Kaleidoscope"]
  cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
  trustexitcode = true
