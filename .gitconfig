[user]
  name = Juan Obando
  email = juanchopx2@gmail.com

[alias]
  # add
  aa = add .
  au = add -u

  # checkout
  co = checkout
  cb = checkout -b
  cf = checkout --

  # diff
  di = diff
  kdi = difftool -y -t Kaleidoscope

  # commit
  ci = commit
  cim = commit -m
  cia = commit --amend
  cian = commit --amend --no-edit

  # status
  st = status -s

  # pull
  up = pull

  # log
  l = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  lf = log -u

  # merge
  kmg = mergetool -y -t Kaleidoscope

  # reset
  ustg = reset HEAD
  uci = reset --soft HEAD^

[core]
  # global gitignore file
  excludesfile = ~/.gitignore
  editor = vim

[color]
  ui = always

[color "diff"]
  meta = 226
  frag = magenta
  old = 009
  new = 046

[color "status"]
  added = 046
  changed = 226
  untracked = 009

[merge]
  log = true

[push]
  # push changes from the current branch
  default = current

[pull]
  # pull changes to the current branch
  default = current

# Set Kaleidoscope app as a optional diff tool
[difftool "Kaleidoscope"]
  cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"

# Set Kaleidoscope app as a optional merge tool
[mergetool "Kaleidoscope"]
  cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
  trustexitcode = true
