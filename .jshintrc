// JSHint options: http://www.jshint.com/docs/options/

// TO-DO: group options in a meaningful way
{
  // Enforcing
  "camelcase": true,
  "curly": true,
  "eqeqeq": true,
  "forin": true,
  "immed": true,
  "indent": 2,
  "latedef": true,
  "plusplus": true,
  "undef": true,
  "unused": true,
  "strict": true,
  "maxlen": 80,

  // Relaxing
  "es5": true
}
