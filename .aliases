# Better file list visuatlization
# Always use color output for `ls`
alias ls="ls -AFG"

# Folder management
alias md="mkdir -p"
alias rd="rm -rf"
alias cp="cp -v"
alias mv="mv -v"
alias rm="rm -i"

# Update all package managers and clean their caches.
alias update="brew outdated -v && brew upgrade -v && brew cleanup -s --prune=all && brew doctor -v | nvm cache clear && npm cache clean --force"

# Alias to always used Homebrewed Grep and always enable colored output
alias grep="ggrep --color=always -n"
