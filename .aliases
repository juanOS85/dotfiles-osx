# Better file list visuatlization
# Always use color output for `ls`
alias ls="ls -AFG"

# Folder management
alias md="mkdir -p"
alias rd="rm -rf"
alias cp="cp -v"
alias mv="mv -v"
alias rm="rm -i -v"

# `cat` with beautiful colors. Requires Pygments installed.
# [sudo] pip install Pygments
alias c='pygmentize -O style=monokai -f console256 -g'

# Programs
# To avoid create symbolic link on */bin folders
alias subl='open -a "Sublime Text"'

# Update all package managers and clean their caches.
alias update='brew tap --repair && brew update -v && brew upgrade -v && brew cleanup -s --prune=1 && brew prune && brew doctor | rvm get head && rvm cleanup all && nvm cache clear && npm cache clean --force && composer clear-cache && ruby ~/Dev/slack_delete.rb'
